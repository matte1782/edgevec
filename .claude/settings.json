{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Write(tests/**/*)",
      "Write(benches/**/*)",
      "Write(docs/**/*)",
      "Write(examples/**/*)",
      "Write(fuzz/**/*)",
      "Write(pkg/**/*)",
      "Edit(tests/**/*)",
      "Edit(benches/**/*)",
      "Edit(docs/**/*)",
      "Edit(examples/**/*)",
      "Edit(fuzz/**/*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo bench:*)",
      "Bash(cargo fuzz:*)",
      "Bash(cargo tarpaulin:*)",
      "Bash(cargo miri:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo check:*)",
      "Bash(cargo build:*)",
      "Bash(cargo run:*)",
      "Bash(cargo clean:*)",
      "Bash(cargo +nightly check:*)",
      "Bash(cargo +nightly clippy:*)",
      "Bash(rustup run nightly cargo miri test:*)",
      "Bash(rustup component add:*)",
      "Bash(wasm-pack build:*)",
      "Bash(wasm-pack test:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(test:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(echo:*)",
      "Bash(npm test)",
      "Bash(npm pack:*)",
      "Bash(node:*)",
      "Bash(node -e:*)",
      "Bash(node harness.js:*)",
      "Bash(python:*)",
      "Bash(bash:*)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Write(.git/**/*)",
      "Edit(.git/**/*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git rebase -i:*)",
      "Bash(cargo yank:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cargo fmt 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "test -f .claude/GATE_2_COMPLETE.md || echo '[WARNING] GATE 2 not passed - plan approval recommended before writing source code'"
          }
        ]
      }
    ]
  },
  "env": {
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always",
    "RUSTFLAGS": "-D warnings"
  }
}
